{
  "manifest_version": 3,
  "name": "TODO",
  "description": "TODO",
  "version": "0.1.0",
  "icons": {
    "16": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
